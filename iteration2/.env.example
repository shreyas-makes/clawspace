# Mattermost image tag from official docs examples; update deliberately when you plan upgrades.
MATTERMOST_IMAGE_TAG=release-10.5

# No-domain-first defaults: local binding + SSH tunnel access.
MM_HTTP_BIND_PORT=8065
MM_SITE_URL=http://127.0.0.1:8065
MM_ENABLE_USER_CREATION=false
MM_ENABLE_SIGNUP_WITH_EMAIL=false

# Postgres credentials (generate with: openssl rand -base64 36)
POSTGRES_DB=mattermost
POSTGRES_USER=mmuser
POSTGRES_PASSWORD=REPLACE_WITH_LONG_RANDOM_PASSWORD

# OpenClaw + Mattermost plugin runtime values
OPENCLAW_GATEWAY_URL=http://127.0.0.1:8080
OPENCLAW_MATTERMOST_BASE_URL=http://127.0.0.1:8065
OPENCLAW_MATTERMOST_BOT_TOKEN=REPLACE_WITH_MM_BOT_TOKEN
OPENCLAW_ALLOWED_HUMAN_1=@alice
OPENCLAW_ALLOWED_HUMAN_2=@bob
OPENCLAW_TRIGGER_MODE=oncall
OPENCLAW_PREFIX=@claw
OPENCLAW_CHANNEL_ID=REPLACE_WITH_CHANNEL_ID
